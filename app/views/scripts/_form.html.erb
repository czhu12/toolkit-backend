<%= form_with(model: script) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_area :code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :run_count %>
    <%= form.number_field :run_count, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :slug %>
    <%= form.text_field :slug, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :visibility %>
    <%= form.number_field :visibility, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), scripts_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), script_path(@script), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
