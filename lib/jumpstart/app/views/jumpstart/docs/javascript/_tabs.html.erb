    <li class="mr-1" data-tabs-target="tab" data-action="click->tabs#change:prevent">
      <a href="#" class="inline-block py-2 px-4 text-primary hover:text-blue-800 font-semibold no-underline">Active</a>
    </li>
    <li class="mr-1" data-tabs-target="tab" data-action="click->tabs#change:prevent">
